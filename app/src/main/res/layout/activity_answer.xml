<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.activity.WriteAnswerActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_common_toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="回答评论"
        app:titleTextColor="@color/black" />

    <EditText
        android:id="@+id/edt_answer_content"
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/qa_ic_quiz_new_text_background"
        android:gravity="start|top"
        android:hint="给出你的回答"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <com.example.gdmap.ui.widget.NineGridView
        android:id="@+id/nine_grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:paddingStart="15dp"
        android:paddingTop="19dp"
        android:paddingEnd="15dp"
        android:paddingBottom="19dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_answer_content"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
