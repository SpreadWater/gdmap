<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/article_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/divide_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_article_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="author"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_article_item_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_article_item_author"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.gdmap.ui.widget.RectangleView
                android:id="@+id/iv_article_item1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp" />

            <com.example.gdmap.ui.widget.RectangleView
                android:id="@+id/iv_article_item2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp" />

            <com.example.gdmap.ui.widget.RectangleView
                android:id="@+id/iv_article_item3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp" />

            <com.example.gdmap.ui.widget.RectangleView
                android:id="@+id/iv_article_item4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_article_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_article_item_title"
            android:layout_marginLeft="200dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="12455448888888" />

    </LinearLayout>
</androidx.cardview.widget.CardView>